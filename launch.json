{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Client Debug",
      "port": 3001,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/client", 
      "remoteRoot": "/opt/clientdev",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "name": "Server Debug",
      "request": "attach",
      "port": 4001,
      "restart": true,
      "localRoot": "${workspaceFolder}/server", 
      "remoteRoot": "/opt/serverdev",
      "protocol": "inspector"
    }
  ]
}